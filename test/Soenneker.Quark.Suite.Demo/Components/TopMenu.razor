<Bar Mode="BarMode.Horizontal" Class="top-navbar top-glass" Fixed="BarFixed.Top">
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarBrand>
                    <BarLink Class="navbar-brand">
                        <img src="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" alt="Quark Suite" style="height: 1.5rem;" />
                    </BarLink>
                </BarBrand>
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarLink To="https://github.com/soenneker/soenneker.quark.suite" Target="Target.Blank" Class="github-link">
                    <BarIcon Name="github" IconStyle="IconStyle.Brands"/>
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

<style>
    .top-navbar {
        min-height: 2.75rem !important;
        padding: 0.375rem 0 !important;
        background-color: color-mix(in srgb, var(--bs-body-bg) 75%, transparent);
        border-bottom: 1px solid color-mix(in srgb, var(--bs-border-color) 80%, transparent);
        backdrop-filter: saturate(180%) blur(12px);
        -webkit-backdrop-filter: saturate(180%) blur(12px);
    }
    
    .top-navbar .navbar-brand {
        display: flex;
        align-items: center;
        text-decoration: none;
        padding: 0.25rem 0;
    }
    
    .top-navbar .github-link {
        padding: 0.375rem 0.625rem;
        color: var(--bs-body-color);
        text-decoration: none;
        transition: color 0.15s ease-in-out, transform .15s ease-in-out;
        border-radius: .5rem;
    }
    
    .top-navbar .github-link:hover {
        color: var(--bs-primary);
        background-color: rgba(13,110,253,.08);
        transform: translateY(-1px);
        text-decoration: none;
    }
    
    .top-navbar .bar-item {
        padding: 0;
    }

    /* Elevation shadow when scrolled */
    .top-glass {
        box-shadow: 0 0 0 1px rgba(0,0,0,0.02), 0 8px 24px rgba(0,0,0,0.06);
    }
</style>


@page "/"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<!-- Hero Section -->
<Section Class="hero-section gradient-grid">
    <Container Class="text-center">
        <Div Class="hero-content">
            <H1 Class="hero-title">
                <img src="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" alt="Quark Suite Logo" />
                Soenneker.Quark.Suite
            </H1>
            <Paragraph Class="hero-subtitle">
                The complete suite of Quark components for Blazor applications. 
                <Strong>Epic fast, minimal JavaScript, full theme support, and Bootstrap-powered.</Strong>
            </Paragraph>
            
            <!-- Key Features Badges -->
            <Div Class="hero-badges">
                <Badge Color="Color.Primary" Margin="Margin.Is2.FromEnd.Is2.FromEnd">
                    <Icon Name="bolt" Margin="Margin.Is1.FromEnd" />
                    Epic Fast Performance
                </Badge>
                <Badge Color="Color.Primary" Margin="Margin.Is2.FromEnd.Is2.FromEnd">
                    <Icon Name="palette" Margin="Margin.Is1.FromEnd" />
                    Full Theme Support
                </Badge>
                <Badge Color="Color.Primary" Margin="Margin.Is2.FromEnd.Is2.FromEnd">
                    <Icon Name="bootstrap" Margin="Margin.Is1.FromEnd" />
                    Bootstrap-Based
                </Badge>
                <Badge Color="Color.Primary" Margin="Margin.Is2.FromEnd.Is2.FromEnd">
                    <Icon Name="shield-alt" Margin="Margin.Is1.FromEnd" />
                    MIT License
                </Badge>
                <Badge Color="Color.Primary" Margin="Margin.Is2.FromEnd.Is2.FromEnd">
                    <Icon Name="code-branch" Margin="Margin.Is1.FromEnd" />
                    Active Development
                </Badge>
            </Div>
            
            <Div Class="hero-actions">
                <Button Color="Color.Primary" Size="Size.Large" Margin="Margin.Is3.FromEnd.Is2.FromEnd" To="https://github.com/soenneker/soenneker.quark.suite" Target="Target.Blank">
                    <Icon IconStyle="IconStyle.Brands" Name="github" Margin="Margin.Is2.FromEnd" />
                    View on GitHub
                </Button>
            </Div>
        </Div>
    </Container>
</Section>

<!-- Key Features Section -->
<Section Class="features-section">
    <Container>
        <Row Class="text-center" Margin="Margin.Is5.FromEnd">
            <Column>
                <H2 Class="section-title">
                    <Icon Name="star" TextColor="@Color.Primary" Margin="Margin.Is2.FromEnd" />
                    Built for developers who want performance, flexibility, and freedom
                </H2>
            </Column>
        </Row>
        
        <Row>
            <Column ColumnSize="@ColumnSize.Is4.OnTablet">
                <Card Class="feature-card h-100">
                    <CardBody Class="text-center">
                        <Icon Name="bolt" TextColor="@Color.Primary" Margin="Margin.Is3.FromEnd" IconSize="IconSize.IsTwoX"/>
                        <H4>Epic Fast Performance</H4>
                        <Paragraph>
                            Zero or minimal JavaScript - everything is done in pure Blazor/C#. 
                            Optimized for speed with lightweight component architecture.
                        </Paragraph>
                    </CardBody>
                </Card>
            </Column>
            
            <Column ColumnSize="@ColumnSize.Is4.OnTablet">
                <Card Class="feature-card h-100">
                    <CardBody Class="text-center">
                        <Icon Name="palette" TextColor="@Color.Primary" Margin="Margin.Is3.FromEnd" Class="fa-2x" />
                        <H4>Full Theme Support</H4>
                        <Paragraph>
                            Every component supports complete theming with Bootstrap variable overrides. 
                            Customize colors, spacing, and typography across all components.
                        </Paragraph>
                    </CardBody>
                </Card>
            </Column>
            
            <Column ColumnSize="@ColumnSize.Is4.OnTablet">
                <Card Class="feature-card h-100">
                    <CardBody Class="text-center">
                        <Icon Name="shield-alt" TextColor="@Color.Primary" Margin="Margin.Is3.FromEnd" Class="fa-2x" />
                        <H4>MIT License - Always</H4>
                        <Paragraph>
                            Free forever with the permissive MIT license. Use in commercial projects, 
                            modify, distribute. <Strong>Sponsorship/Donations welcome!</Strong>
                        </Paragraph>
                    </CardBody>
                </Card>
            </Column>
        </Row>
    </Container>
</Section>

<!-- Installation Section -->
<Section Class="installation-section">
    <Container>
        <Row Class="text-center" Margin="Margin.Is5.FromEnd">
            <Column>
                <H2 Class="section-title">
                    <Icon Name="rocket" TextColor="@Color.Success" Margin="Margin.Is2.FromEnd" />
                    Get Started in Minutes
                </H2>
                <Paragraph Class="section-subtitle">
                    Simple installation, powerful results. Get up and running with Quark Suite in just a few steps.
                </Paragraph>
            </Column>
        </Row>
        
        <Row>
            <Column ColumnSize="@ColumnSize.Is8.OnLaptop" Class="mx-auto">
                <Card Class="installation-card">
                    <CardHeader Class="text-center">
                        <H3>
                            <Icon Name="download" Margin="Margin.Is2.FromEnd" />
                            Quick Installation Guide
                        </H3>
                    </CardHeader>
                    <CardBody>
                        <Div Class="installation-steps">
                            <Div Class="step">
                                <Div Class="step-header">
                                    <Badge Color="Color.Primary" Class="step-number">1</Badge>
                                    <H5 Class="step-title">Install the Package</H5>
                                </Div>
                                <Code Class="installation-code">
                                    dotnet add package Soenneker.Quark.Suite
                                </Code>
                                <Paragraph Class="step-description">
                                    Add the NuGet package to your Blazor project
                                </Paragraph>
                            </Div>
                            
                            <Div Class="step">
                                <Div Class="step-header">
                                    <Badge Color="Color.Success" Class="step-number">2</Badge>
                                    <H5 Class="step-title">Register Services</H5>
                                </Div>
                                <Code Class="installation-code">
                                    builder.Services.AddQuarkSuiteAsScoped();
                                </Code>
                                <Paragraph Class="step-description">
                                    Add the service registration to your Program.cs
                                </Paragraph>
                            </Div>
                            
                            <Div Class="step">
                                <Div Class="step-header">
                                    <Badge Color="Color.Info" Class="step-number">3</Badge>
                                    <H5 Class="step-title">Add Imports</H5>
                                </Div>
                                <Code Class="installation-code">
                                    @@using Soenneker.Quark
                                </Code>
                                <Paragraph Class="step-description">
                                    Add the using statement to your _Imports.razor
                                </Paragraph>
                            </Div>
                            
                            <Div Class="step">
                                <Div Class="step-header">
                                    <Badge Color="Color.Warning" Class="step-number">4</Badge>
                                    <H5 Class="step-title">Start Building!</H5>
                                </Div>
                                <Paragraph Class="step-description">
                                    You're ready to use all Quark components in your Blazor application. 
                                    <Strong>No additional JavaScript required!</Strong>
                                </Paragraph>
                                <Div Class="step-example">
                                    <Code Class="installation-code">
                                        &lt;Button Color="Color.Primary"&gt;Hello Quark!&lt;/Button&gt;
                                    </Code>
                                </Div>
                            </Div>
                        </Div>
                    </CardBody>
                </Card>
            </Column>
        </Row>
        
    </Container>
</Section>

<style>
    /* Dark Mode Support */
    :root {
        --bs-body-bg: #ffffff;
        --bs-body-color: #212529;
        --bs-border-color: #dee2e6;
        --bs-primary: #0d6efd;
    }

    [data-bs-theme="dark"] {
        --bs-body-bg: #212529;
        --bs-body-color: #f8f9fa;
        --bs-border-color: #495057;
        --bs-primary: #0d6efd;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #0b0f14 0%, #0f1722 50%, #0b0f14 100%);
        color: #ffffff;
        padding: 6rem 0;
        margin-bottom: 0;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        inset: 0;
        background:
            radial-gradient(600px circle at 20% 10%, rgba(13,110,253,.15), transparent 40%),
            radial-gradient(800px circle at 80% 90%, rgba(13,110,253,.08), transparent 45%);
        pointer-events: none;
    }

    .gradient-grid::after {
        content: '';
        position: absolute;
        inset: 0;
        background-image: linear-gradient(to right, rgba(255,255,255,.05) 1px, transparent 1px),
                          linear-gradient(to bottom, rgba(255,255,255,.05) 1px, transparent 1px);
        background-size: 36px 36px;
        mask-image: radial-gradient(ellipse at center, rgba(0,0,0,.75), transparent 70%);
        pointer-events: none;
    }

    .hero-content {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ffffff;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .hero-title img {
        height: 2.5rem;
        margin-right: 0.75rem;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        color: #ffffff;
        opacity: 0.9;
        line-height: 1.5;
    }

    .hero-badges {
        margin-bottom: 2rem;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
    }

    .hero-actions {
        margin-top: 1.5rem;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.75rem;
    }

    /* Features Section */
    .features-section {
        padding: 4rem 0;
        background-color: var(--bs-body-bg);
    }

    .feature-card {
        border: 1px solid var(--bs-border-color);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        transition: transform .15s ease, box-shadow .15s ease;
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .feature-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 18px 30px rgba(0, 0, 0, 0.12);
    }


    /* Development Section */
    .development-section {
        padding: 4rem 0;
        background-color: var(--bs-body-bg);
    }

    [data-bs-theme="dark"] .development-section {
        background-color: #343a40;
    }

    .dev-stat-card {
        border: 1px solid #dee2e6;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        transition: transform .15s ease, box-shadow .15s ease;
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .dev-stat-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 18px 30px rgba(0, 0, 0, 0.12);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 600;
        color: #0d6efd;
        margin: 0;
    }

    .stat-label {
        font-size: 1rem;
        color: #6c757d;
        margin: 0;
        font-weight: 500;
    }


    /* Installation Section */
    .installation-section {
        padding: 4rem 0;
        background-color: var(--bs-body-bg);
    }

    [data-bs-theme="dark"] .installation-section {
        background-color: #343a40;
    }

    .installation-card {
        border: 1px solid #dee2e6;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .installation-steps {
        max-width: 700px;
        margin: 0 auto;
    }

    .step {
        margin-bottom: 2.5rem;
        padding-bottom: 2.5rem;
        border-bottom: 2px solid #e9ecef;
        position: relative;
    }

    .step:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .step-header {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

    .step-number {
        font-size: 1.2rem;
        font-weight: 700;
        margin-right: 1rem;
        min-width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .step-title {
        margin: 0;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .step-description {
        color: #6c757d;
        margin-top: 0.5rem;
        font-size: 1rem;
    }

    .step-example {
        margin-top: 1rem;
    }

    .installation-code {
        background-color: #f8f9fa;
        color: #212529;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 1rem;
        font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, Courier, monospace;
        font-size: 0.875rem;
        display: block;
        margin-top: 0.75rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        overflow-x: auto;
    }

    .resource-card {
        border: 1px solid #dee2e6;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        transition: transform .15s ease, box-shadow .15s ease;
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .resource-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 18px 30px rgba(0, 0, 0, 0.12);
    }

    /* Section Titles */
    .section-title {
        font-size: 2.25rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--bs-body-color);
        letter-spacing: .2px;
    }

    .section-subtitle {
        font-size: 1.125rem;
        color: var(--bs-body-color);
        opacity: 0.82;
        margin-bottom: 0;
        line-height: 1.65;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
            flex-direction: column;
        }

        .hero-title img {
            margin-right: 0;
            margin-bottom: 1rem;
        }

        .hero-actions {
            flex-direction: column;
            align-items: center;
        }

        .hero-actions .btn {
            width: 100%;
            max-width: 300px;
        }

        .section-title {
            font-size: 2.2rem;
        }

        .performance-item,
        .license-item {
            font-size: 1rem;
        }

        .step-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .step-number {
            margin-bottom: 0.5rem;
        }
    }

    @@media (max-width: 576px) {
        .hero-section {
            padding: 4rem 0;
        }

        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1.1rem;
        }

        .section-title {
            font-size: 1.8rem;
        }

        .performance-section,
        .theme-section,
        .license-section,
        .development-section,
        .components-section,
        .installation-section {
            padding: 3rem 0;
        }
    }

    /* Utility Classes */
    .h-100 {
        height: 100% !important;
    }

    .text-center {
        text-align: center !important;
    }

    .mx-auto {
        margin-left: auto !important;
        margin-right: auto !important;
    }

    .mb-2 {
        margin-bottom: 0.5rem !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .mb-4 {
        margin-bottom: 1.5rem !important;
    }

    .mb-5 {
        margin-bottom: 3rem !important;
    }

    .me-1 {
        margin-right: 0.25rem !important;
    }

    .me-2 {
        margin-right: 0.5rem !important;
    }

    .me-3 {
        margin-right: 1rem !important;
    }

    .mt-5 {
        margin-top: 3rem !important;
    }
</style>

@code{
    protected override void OnInitialized()
    {
        Logger.LogInformation("Index page initialized");
    }
}

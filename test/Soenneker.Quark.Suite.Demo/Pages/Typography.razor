@page "/typography"

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary">Typography</h1>
                <p class="lead text-muted">This page demonstrates the Quark typography components with various configurations and use cases.</p>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-12">
            <div>
                <h2>Headings</h2>
                <div class="mb-3">
                    <H1>Heading 1</H1>
                    <H2>Heading 2</H2>
                    <H3>Heading 3</H3>
                    <H4>Heading 4</H4>
                    <H5>Heading 5</H5>
                    <H6>Heading 6</H6>
                </div>
                <p class="text-muted">All heading levels are available as Quark components.</p>
            </div>

            <hr />

            <div>
                <h2>Heading Sizes</h2>
                <div class="mb-3">
                    <H1 Size="Size.Small">Small H1</H1>
                    <H2 Size="Size.Large">Large H2</H2>
                    <H3 Size="Size.ExtraLarge">Extra Large H3</H3>
                </div>
                <p class="text-muted">Headings can have different sizes using the Size parameter.</p>
            </div>

            <hr />

            <div>
                <h2>Heading Colors</h2>
                <div class="mb-3">
                    <H1 Color="Color.Primary">Primary H1</H1>
                    <H2 Color="Color.Success">Success H2</H2>
                    <H3 Color="Color.Warning">Warning H3</H3>
                    <H4 Color="Color.Danger">Danger H4</H4>
                    <H5 Color="Color.Info">Info H5</H5>
                    <H6 Color="Color.Secondary">Secondary H6</H6>
                </div>
                <p class="text-muted">Headings can be styled with different colors.</p>
            </div>

            <hr />

            <div>
                <h2>Text Elements</h2>
                <div class="mb-3">
                    <Text>This is a regular text element.</Text>
                </div>
                <div class="mb-3">
                    <Text Color="Color.Primary">This is primary colored text.</Text>
                </div>
                <div class="mb-3">
                    <Text Color="Color.Success">This is success colored text.</Text>
                </div>
                <div class="mb-3">
                    <Text Color="Color.Warning">This is warning colored text.</Text>
                </div>
                <div class="mb-3">
                    <Text Color="Color.Danger">This is danger colored text.</Text>
                </div>
            </div>

            <hr />

            <div>
                <h2>Text Sizes</h2>
                <div class="mb-3">
                    <Text Size="Size.Small">Small text</Text>
                </div>
                <div class="mb-3">
                    <Text Size="Size.Default">Default text</Text>
                </div>
                <div class="mb-3">
                    <Text Size="Size.Large">Large text</Text>
                </div>
                <div class="mb-3">
                    <Text Size="Size.ExtraLarge">Extra Large text</Text>
                </div>
            </div>

            <hr />

            <div>
                <h2>Text Formatting</h2>
                <div class="mb-3">
                    <Strong>This text is bold using Strong component</Strong>
                </div>
                <div class="mb-3">
                    <Text><em>This text is italic using HTML em tag</em></Text>
                </div>
                <div class="mb-3">
                    <Small>This text is small using Small component</Small>
                </div>
                <div class="mb-3">
                    <Text><u>This text is underlined using HTML u tag</u></Text>
                </div>
                <div class="mb-3">
                    <Text><s>This text is strikethrough using HTML s tag</s></Text>
                </div>
            </div>

            <hr />

            <div>
                <h2>Paragraphs</h2>
                <div class="mb-3">
                    <Paragraph>This is a paragraph using the Paragraph component. It provides proper spacing and formatting for text content.</Paragraph>
                </div>
                <div class="mb-3">
                    <Paragraph Color="Color.Info">This is an info-colored paragraph that stands out from regular text.</Paragraph>
                </div>
                <div class="mb-3">
                    <Paragraph Size="Size.Large">This is a large paragraph that uses a bigger font size for emphasis.</Paragraph>
                </div>
            </div>

            <hr />

            <div>
                <h2>Code Elements</h2>
                <div class="mb-3">
                    <Code>This is inline code using the Code component</Code>
                </div>
                <div class="mb-3">
                    <PreCode>
                        <div>This is a code block using PreCode component</div>
                        <div>It preserves formatting and spacing</div>
                        <div>Perfect for displaying code snippets</div>
                    </PreCode>
                </div>
                <div class="mb-3">
                    <Code Color="Color.Danger">Error code: 404</Code>
                </div>
            </div>

            <hr />

            <div>
                <h2>Lists</h2>
                <div class="row">
                    <div class="col-md-6">
                        <h5>Unordered List</h5>
                        <UnorderedList>
                            <UnorderedListItem>First item</UnorderedListItem>
                            <UnorderedListItem>Second item</UnorderedListItem>
                            <UnorderedListItem>Third item</UnorderedListItem>
                        </UnorderedList>
                    </div>
                    <div class="col-md-6">
                        <h5>Ordered List</h5>
                        <OrderedList>
                            <OrderedListItem>First numbered item</OrderedListItem>
                            <OrderedListItem>Second numbered item</OrderedListItem>
                            <OrderedListItem>Third numbered item</OrderedListItem>
                        </OrderedList>
                    </div>
                </div>
            </div>

            <hr />

            <div>
                <h2>Line Breaks and Separators</h2>
                <div class="mb-3">
                    <Text>This is the first line of text.</Text>
                    <Br />
                    <Text>This is the second line after a line break.</Text>
                </div>
                <div class="mb-3">
                    <Text>This is content above the horizontal rule.</Text>
                    <Hr />
                    <Text>This is content below the horizontal rule.</Text>
                </div>
            </div>

            <hr />

            <div>
                <h2>Text Alignment</h2>
                <div class="mb-3">
                    <Text Class="text-start">Left aligned text</Text>
                </div>
                <div class="mb-3">
                    <Text Class="text-center">Center aligned text</Text>
                </div>
                <div class="mb-3">
                    <Text Class="text-end">Right aligned text</Text>
                </div>
            </div>

            <hr />

            <div>
                <h2>Text Utilities</h2>
                <div class="mb-3">
                    <Text Class="text-uppercase">uppercase text</Text>
                </div>
                <div class="mb-3">
                    <Text Class="text-lowercase">LOWERCASE TEXT</Text>
                </div>
                <div class="mb-3">
                    <Text Class="text-capitalize">capitalize each word</Text>
                </div>
                <div class="mb-3">
                    <Text Class="fw-bold">Bold text using font-weight</Text>
                </div>
                <div class="mb-3">
                    <Text Class="fst-italic">Italic text using font-style</Text>
                </div>
            </div>

            <hr />

            <div>
                <h2>Blockquotes</h2>
                <div class="mb-3">
                    <blockquote class="blockquote">
                        <Paragraph>This is a blockquote using Bootstrap's blockquote class. It's great for highlighting important quotes or testimonials.</Paragraph>
                        <footer class="blockquote-footer">
                            <cite title="Source Title">Source Title</cite>
                        </footer>
                    </blockquote>
                </div>
            </div>

            <hr />

            <div>
                <h2>Text with Custom Styling</h2>
                <div class="mb-3">
                    <Text Class="text-primary fs-4">Large primary text</Text>
                </div>
                <div class="mb-3">
                    <Text Class="text-success fw-bold">Bold success text</Text>
                </div>
                <div class="mb-3">
                    <Text Class="text-warning text-decoration-underline">Underlined warning text</Text>
                </div>
                <div class="mb-3">
                    <Text Class="text-danger text-decoration-line-through">Strikethrough danger text</Text>
                </div>
            </div>

            <hr />

            <div>
                <h2>Responsive Typography</h2>
                <div class="mb-3">
                    <H1 Class="display-1">Display 1</H1>
                    <H2 Class="display-2">Display 2</H2>
                    <H3 Class="display-3">Display 3</H3>
                    <H4 Class="display-4">Display 4</H4>
                    <H5 Class="display-5">Display 5</H5>
                    <H6 Class="display-6">Display 6</H6>
                </div>
                <p class="text-muted">Display headings are larger, more prominent headings.</p>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
    }
}

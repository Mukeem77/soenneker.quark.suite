
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    public override string? ThemeKey { get; set; } = "DropdownMenu";

    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public bool RightAligned { get; set; }

    [Parameter]
    public Direction Direction { get; set; } = Direction.Default;

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        var baseClasses = "dropdown-menu";

        if (Visible)
            baseClasses = $"{baseClasses} show";

        if (RightAligned)
            baseClasses = $"{baseClasses} dropdown-menu-end";

        switch (Direction.Value)
        {
            case Direction.UpValue:
                baseClasses = $"{baseClasses} dropup";
                break;
            case Direction.EndValue:
                baseClasses = $"{baseClasses} dropend";
                break;
            case Direction.StartValue:
                baseClasses = $"{baseClasses} dropstart";
                break;
        }

        AppendToClassAttr(attributes, baseClasses);

        return attributes;
    }
}
